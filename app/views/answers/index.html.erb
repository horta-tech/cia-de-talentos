<% @answers.each do |answer| %>
  <%= link_to answer_path(answer) do %><h3>Resposta - <%= answer.id %> </h3><% end %>
  <%= link_to 'Deletar', answer_path(answer), method: :delete %>
  <%= link_to 'Editar', edit_answer_path(answer) %></h3>
  <p><%= answer.text %></p>

<% end %>

<%= link_to 'Nova Resposta', new_answer_path, class: 'btn btn-info' %>