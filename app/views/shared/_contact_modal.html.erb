<div class="contact-modal-box">
  <p class="contact-modal-text">Vamos trocar uma ideia? (:</p>
    <div class="contact-modal-buttons">
      whatsapp
    </div>
  <p class="contact-modal-text">Pode ser pessoalmente:</p>
    <div class="contact-modal-buttons">
      <a href="https://m.uber.com/ul/?action=setPickup&client_id=NiGGdOeVh4c1tXRrSqQ8ppYs_My-1VpN&pickup=my_location&dropoff[formatted_address]=Rua%20Pedro%20Ortiz%2C%20164%20-%20Pinheiros%2C%20S%C3%A3o%20Paulo%20-%20State%20of%20S%C3%A3o%20Paulo%2C%20Brazil&dropoff[latitude]=-23.549501&dropoff[longitude]=-46.691229">
        uber
      </a>
    </div>
    <div class="contact-modal-buttons">
      <a href="https://www.waze.com/ul?ll=-23.54950140%2C-46.69122860&navigate=yes&zoom=16">
        waze
      </a>
    </div>
  <p class="contact-form-text">Ou deixa que a gente quebra o gelo:</p>
  <div class="contact-modal-form">
    <%= simple_form_for Lead.new do |f| %>
      <%= f.input :name, placeholder: "nome", label: false, class: "contact-modal-form" %>
      <%= f.input :email, placeholder: "e-mail", label: false, class: "contact-modal-form" %>
      <%= f.input :phone, placeholder: "telefone", label: false, class: "contact-modal-form" %>
      <%= f.button :submit, :enviar, class: "contact-confirm-button" %>
    <% end %>
  </div>
  <div class="contact-modal-kill">
    <i class="far fa-times-circle"></i>
  </div>
  <div class="contact-modal-set-icon">
    <%= image_tag "icon_white.png", class: "contact-modal-icon" %>
  </div>
</div>
<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    <%= render(:partial => 'scripts/contact_modal', :handlers => [:erb], :formats => [:js]) %>
  <% end %>
<% end %>
