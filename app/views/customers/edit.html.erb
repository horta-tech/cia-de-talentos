<div class="container">
  <div class="customer-form customer-bottom-border-line">
    <div class="customer-title customer-bottom-border-line">
      <h3><%= @customer.name %></h3>
    </div>
    <%= simple_form_for @customer do |f| %>
      <%= f.input :name, label: "Nome" %>
      <%= f.input :insta_text, label: "Texto do perfil" %>
      <%= f.input :fb_url, label: "Url do facebook" %>
      <%= f.input :insta_url, label: "Url do instagram" %>
      <%= f.input :site_url, label: "Url do site" %>
      <%= f.input :logo %>
      <%= f.input :logo_cache, as: :hidden %>
      <%= f.button :submit, "Confirmar", class: "btn btn-success" %>
    <% end %>
  </div>
  <div class="customer-title customer-bottom-border-line">
    <h3>Fotos:</h3>
  </div>
  <div class= "customer-photo-album">
    <% @customer.photos.each do |photo| %>
      <div class="customer-photo-card customer-bottom-border-line">
        <%= image_tag photo.upload.url, class: "customer-photo" %>
        <%= link_to photo,
                  method: :delete,
                  data: { confirm: "Tem certeza?"} do %>
          <i class="fas fa-eraser"></i> apagar
        <% end %>
      </div>
    <% end %>
  </div>
  <div class= "customer-photo-form">
    <%= simple_form_for @photo do |f| %>
      <%= f.input :upload, as: :file %>
      <%= f.input :customer_id, as: :hidden, input_html: { value: @customer.id } %>
      <%= f.button :submit, "Nova foto", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
